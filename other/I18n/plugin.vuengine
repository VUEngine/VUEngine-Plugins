{
	"folders": [{
		"path": "."
	}],
	"plugin": {
		"displayName": "I18n",
		"author": "Team VUEngine",
		"description": {
			"en": "Allows you to add multiple selectable languages to your project.",
			"de": "Ermöglicht es Ihnen, Ihrem Projekt mehrere auswählbare Sprachen hinzuzufügen.",
			"es": "Le permite añadir varios idiomas seleccionables a su proyecto."
		},
		"repository": "https://github.com/VUEngine/VUEngine-Plugins/tree/master/other/I18n",
		"license": "MIT",
		"tags": [
			"I18n"
		],
		"dependencies": []
	},
	"templates": {
		"LanguageSpec.c": {
			"target": "assets/Language/${name}LanguageSpec.c",
			"template": "templates/LanguageSpec.c.nj",
			"encoding": "win1252",
			"itemSpecific": "Language"
		},
		"Languages.c": {
			"target": "assets/Language/Languages.c",
			"template": "templates/Languages.c.nj",
			"events": [
				{
					"type": "installedPluginsChanged"
				}
			]
		},
		"Languages.h": {
			"target": "source/assets/Languages.h",
			"template": "templates/Languages.h.nj",
			"events": [
				{
					"type": "installedPluginsChanged"
				}
			]
		}
	},
	"types": {
		"Language": {
			"schema": {
				"title": "Language",
				"properties": {
					"name": {
						"type": "string",
                        "default": ""
					},
					"localizedName": {
						"type": "string",
                        "default": ""
					},
					"code": {
						"type": "string",
						"default": "en",
						"maxLength": 2,
						"minLength": 2
					},
					"flag": {
						"type": "string",
                        "default": ""
					},
					"order": {
						"type": "integer",
						"minimum": 0
					},
					"translations": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"id": {
									"type": "string",
                                    "default": ""
								},
								"translation": {
									"type": "string",
                                    "default": ""
								}
							}
						}
					}
				},
				"required": [],
				"additionalProperties": false
			},
			"multiple": true,
			"category": "Assets",
			"icon": "fa fa-language",
			"templates": [
				"LanguageSpec.c",
				"Languages.c",
				"Languages.h"
			]
		}
	}
}